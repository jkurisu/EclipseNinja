<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<plugin>

   <extension
         id="application"
         point="org.eclipse.core.runtime.applications">
      <application>
         <run
               class="com.eclipseninja.archimedes.sling.application.Application">
         </run>
      </application>
   </extension>
   <extension
         id="product"
         point="org.eclipse.core.runtime.products">
      <product
            application="com.eclipseninja.archimedes.sling.application.application"
            name="Sling">
         <property
               name="appName"
               value="Sling">
         </property>
      </product>
   </extension>

</plugin>
